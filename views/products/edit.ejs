<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../partials/header'); %>
</header>

<main>
    <div class="jumbotron">
        <h1>Edit Product</h1>
        <form action="/products/<%= product._id %>/edit" method="POST" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-4">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" value="<%= product.name %>" required><br>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label for="price">Price:</label>
                    <input type="number" id="price" name="price" value="<%= product.price %>" min="0" step="0.01" required>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label for="description">Description:</label><br>
                    <textarea id="description" name="description" rows="4" cols="50"><%= product.description %></textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label for="description">Image:</label><br>
                    <input type="file" name="files" accept="image/*">
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <input type="submit" name="submit" id="submit" value="submit" />
                </div>
            </div>
        </form>
    </div>
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>